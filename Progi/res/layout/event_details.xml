<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget32"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/widget86"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/details_relativeLayout0"
            android:layout_width="match_parent"
            android:layout_height="75dp" >

            <TextView
                android:id="@+id/details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/name_of_event"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/totals_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/total_people_who_have_heard"
                android:textColor="@color/white"
                 />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/details_relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <TextView
                android:id="@+id/details_descriptionLabel"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/description"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/details_descriptionValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
              
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/details_descriptionLabel"
                android:gravity="top|left"
                android:text="@string/textview"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/details_relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <TextView
                android:id="@+id/details_locationLabel"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/location"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/details_locationValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/details_locationLabel"
                android:gravity="top|left"
                android:text="@string/textview"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/details_relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/details_typeLabel"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/type_of_event"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/details_typeValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/details_typeLabel"
                android:layout_alignBottom="@+id/details_typeLabel"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/details_typeLabel"
                android:gravity="center"
                android:text="@string/textview"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/details_relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/details_dateLabel"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/date"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/details_dateValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/details_dateLabel"
                android:layout_alignBottom="@+id/details_dateLabel"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/details_dateLabel"
                android:gravity="center"
                android:text="@string/textview"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/details_relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/details_timeLabel"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/start_time"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/details_timeValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/details_timeLabel"
                android:layout_alignBottom="@+id/details_timeLabel"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/details_timeLabel"
                android:gravity="center"
                android:text="@string/textview"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/details_relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/details_durationLabel"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/duration"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/details_durationValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/details_durationLabel"
                android:layout_alignBottom="@+id/details_durationLabel"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/details_durationLabel"
                android:gravity="center"
                android:text="@string/textview"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/white" />

        <TextView
            android:id="@+id/details_ratingsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/rate_this_event"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/heard_of_event_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="319dp"
                android:layout_height="107dp"
                tools:ignore="UselessParent" >

                <RadioButton
                    android:id="@+id/radioButton_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radioButton_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    
                    android:text="@string/submit" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</ScrollView>