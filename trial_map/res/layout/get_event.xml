<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="305dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Location Of Event" />

        <AutoCompleteTextView
            android:id="@+id/autoComplete_location"
            android:layout_width="276dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Time " />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="276dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Date" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="276dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Description Of Event" />

        <EditText
            android:id="@+id/textbox_description"
            android:layout_width="276dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/widget61"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button_addEvent"
                android:text="Cancel" />

            <Button
                android:id="@+id/button_addEvent"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Add Event" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>